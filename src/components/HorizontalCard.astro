---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	img?: string;
	desc: string;
	url: string;
	badge?: string;
	tags?: string[];
	target?: string;
}

const { title, img, desc, url, badge, tags, target = '_blank' } = Astro.props;

const tag_url = url.split('/').slice(0, -1).join('/') + '/tag';
---

<div
	class="my-2 rounded-lg bg-base-100 transition duration-300 ease-in-out hover:scale-[102%] hover:shadow-xl"
>
	<a href={url} target={target} class="">
		<div class="hero-content flex-col md:flex-row">
			{
				img && (
					<Image
						src={img}
						width={750}
						height={422}
						format="webp"
						alt={title}
						class="max-w-full rounded-lg md:max-w-[13rem]"
					/>
				)
			}
			<div class="w-full grow">
				<h1 class="font-bold">
					{title}
					{badge && <div class="badge badge-secondary mx-2">{badge}</div>}
				</h1>
				<p class="text-1xl py-1 text-neutral/60 dark:text-neutral-content/60">
					{desc}
				</p>
				<div class="card-actions justify-end">
					{
						tags &&
							tags.map((tag) => (
								<a href={`${tag_url}/${tag}`} class="badge badge-outline">
									{tag}
								</a>
							))
					}
				</div>
			</div>
		</div>
	</a>
</div>
